<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability= "blocksDescendants"


    android:gravity="center"

    android:background="@drawable/corners_bg" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:background="@null"
                android:id="@+id/title_img" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="精选优良玉米10000斤"
                        android:id="@+id/title" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="起拍价："
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/fauction_btn_color"
                        android:text="￥1.5/斤"
                        android:id="@+id/price" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="拍卖数量："
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/fauction_btn_color"
                        android:text="5000斤/10000斤"
                        android:id="@+id/remind_num" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="开拍时间："
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/fauction_btn_color"
                        android:text="1小时50分钟36秒"
                        android:id="@+id/end_time" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"

            android:padding="10dp"

            android:layout_height="wrap_content"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





            <Button
                android:id="@+id/cancle_remind"
                android:layout_width="70dp"
                android:layout_toLeftOf="@id/pay"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:focusable = "false"
                android:layout_alignParentRight="true"
                android:background="@drawable/remind_state_btn"
                android:textColor="@color/black"
                android:text="取消提醒"/>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>