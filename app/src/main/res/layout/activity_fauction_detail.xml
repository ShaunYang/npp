<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_do"
    android:layout_height="match_parent"
    >
    <WebView
        android:visibility="gone"
        android:id="@+id/websocket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/common_topbar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/back"
                android:background="@drawable/back"/>



              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textSize="22dp"
                  android:textColor="#FFFFFF"
                  android:text="拍品详情"/>




        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--header-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp">
                                <com.zhuoyi.fauction.ui.home.view.SlideShowView
                                    android:id="@+id/top_ad"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:layout_height="200dp"></com.zhuoyi.fauction.ui.home.view.SlideShowView>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="200dp">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="7"></View>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:orientation="horizontal"
                                    android:background="#e0000000"
                                    android:gravity="center"
                                    android:layout_marginLeft="-50dp"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/fac_prestart"
                                         />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/colorwhite"
                                        android:textSize="12dp"
                                        android:text="正在进行"
                                        android:id="@+id/jingxing" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorwhite"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="12dp"
                                        android:text="剩余23天13小时3分20秒"
                                        android:id="@+id/shoot_time" />

                                    <TextView
                                        android:id="@+id/delay_time"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/colorwhite"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content"
                                        android:text=""/>
                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/divider"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="精选优良玉米10000斤"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:id="@+id/pro_title" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="当前价:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/text_orange_name"
                                android:text="￥1.5/斤"
                                android:id="@+id/cur_price" />
                            <ImageView
                                android:id="@+id/price_state"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/price_up"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="剩余数量:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/text_orange_name"
                                android:text="5000斤"
                                android:id="@+id/remind_num" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--center-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="起拍价:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="￥1.5/斤"
                                android:id="@+id/qipai" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="起拍数量:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="1000斤"
                                android:id="@+id/qipai_num" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="保证金:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="￥500"
                                android:id="@+id/baozj" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="加价幅度:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="￥0.01/次"
                                android:id="@+id/jiafu" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="保留价:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="有"
                                android:id="@+id/isbaoliu" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="延时周期:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="10分钟/次"
                                android:id="@+id/yanshizhouqi" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="降价幅度:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="￥0.01/10分钟"
                                android:id="@+id/jiangjiafudu" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="开拍时间:"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/kaipaishijian"
                                android:layout_marginLeft="4dp"
                                android:text="2016-05-06 12:00:00"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->

                                <!--android:text="结束时间:"/>-->
                            <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginLeft="4dp"-->
                                <!--android:id="@+id/jieshushijian"-->
                                <!--android:text="2016-05-06 15:00:00"/>-->
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"

                        android:background="@drawable/divider"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/price_record_icon"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/price_record"/>
                    <TextView
                        android:id="@+id/fauction_record"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/price_record_icon"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:text="拍卖记录|"/>
                    <TextView
                        android:id="@+id/remind"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/fauction_record"
                        android:layout_height="wrap_content"
                        android:text="0人报名 出价0次"/>

                        <TextView
                            android:id="@+id/more_paimaijilu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="全部>"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/record_title"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="状态"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="时间"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="数量"
                        android:gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/paimairecycleview"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_height="140dp"></ListView>
                <com.zhuoyi.fauction.view.PagerSlidingTabStrip
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/tabs"
                    android:layout_marginTop="10dp"
                    app:pstsIndicatorColor="@color/txt_color_green"
                    app:pstsIndicatorHeight="2dp"
                    app:pstsUnderlineHeight="2dp"

                    app:zmsSelectedTabTextColor="@color/txt_color_green"
                    app:zmsTabTextSize="12dp"
                    app:zmsSelectedTabTextSize="12dp"
                    app:pstsDividerColor="@android:color/transparent"
                    app:pstsShouldExpand="true"></com.zhuoyi.fauction.view.PagerSlidingTabStrip>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPagers"
                    android:layout_width="match_parent"
                    android:layout_height="8000dp"></android.support.v4.view.ViewPager>
            </LinearLayout>


        </ScrollView>


       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="-15dp"
            android:layout_height="60dp">
            <LinearLayout
                android:id="@+id/tixing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_marginBottom="-10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fac_remind"/>
                <TextView
                    android:id="@+id/tx_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="提醒"/>
            </LinearLayout>

            <Button
                android:id="@+id/chujia"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:background="@color/text_orange_name"
                android:text="出  价"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content" />
        </LinearLayout>
</RelativeLayout>
