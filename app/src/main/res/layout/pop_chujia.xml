<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pop_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="当前价："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pop_price"
            android:textSize="18dp"
            android:textColor="@color/text_orange_name"
            android:text="￥1.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/divider"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="可拍数量："/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/pop_num"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/text_orange_name"
            android:text="5000斤"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:text="出价"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/boder"
            android:textSize="18dp"
            android:id="@+id/price_cut"
            android:gravity="center"
            android:text="-"/>
        <EditText
            android:id="@+id/edit_price"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="1.51"
            android:inputType="number|numberDecimal"
            android:background="@drawable/boder"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/boder"
            android:textSize="18dp"
            android:id="@+id/price_add"
            android:gravity="center"
            android:text="+"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/text_orange_name"
            android:text="单位元"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:text="数量"/>
        <TextView
            android:layout_width="40dp"
            android:id="@+id/num_cut"
            android:layout_height="40dp"
            android:background="@drawable/boder"
            android:textSize="18dp"
            android:gravity="center"
            android:text="-"/>
        <EditText
            android:id="@+id/edit_num"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="1000"
            android:inputType="number"
            android:background="@drawable/boder"/>
        <TextView
            android:id="@+id/num_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/boder"
            android:textSize="18dp"
            android:gravity="center"
            android:text="+"/>
        <TextView
            android:id="@+id/tx_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/text_orange_name"
            android:text="单位斤"/>
    </LinearLayout>

    <Button
        android:id="@+id/price_comfirm"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_orange_name"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:text="确   定"/>
</LinearLayout>
