<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gv"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="clip_horizontal"
        android:background="@color/common_bg_color"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/common_topbar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/back"
                android:background="@drawable/back"/>



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22dp"
                android:textColor="#FFFFFF"
                android:text="基地详情"/>






        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/company_title"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text=""/>

                <TextView
                    android:id="@+id/company_jdjs"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"

                    android:text="基地介绍"/>

                <TextView
                    android:id="@+id/company_detail"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    android:text=""/>

                <TextView
                    android:id="@+id/company_lxfs"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"

                    android:text="联系方式"/>

                <TextView
                    android:id="@+id/company_lxr"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"

                    android:text="联系人:"/>
                <TextView
                    android:id="@+id/company_lxdh"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"

                    android:text="联系电话:"/>
                <TextView
                    android:id="@+id/company_lxdz"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"

                    android:text="联系地址:"/>

                <TextView
                    android:id="@+id/company_xgtp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"

                    android:text="相关图片"/>

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/all_recycle_pic"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:fadingEdge="vertical"
                    android:layout_marginBottom="50dp"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>




    </LinearLayout>

    <!-- <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="32dp"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="24dp"
             android:layout_alignParentLeft="true"
             android:background="@drawable/main_back"/>

     </RelativeLayout>-->


</RelativeLayout>
